<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_item"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:backgroundTint="@color/background_cards"
    app:cardCornerRadius="@dimen/corner_size"
    android:layout_margin="@dimen/material_margin_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/material_padding_normal">

        <TextView
            android:id="@+id/title"
            style="@style/BaseSmallTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Мясо"
            android:gravity="center" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>