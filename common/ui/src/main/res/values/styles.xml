<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseSmallTextStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="BaseMediumTextStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>

    <style name="BaseLargeTextStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">@dimen/text_large_size</item>
    </style>

    <style name="AccentSmallTextStyle" parent="BaseSmallTextStyle">
        <item name="android:textColor">@color/text_accent</item>
    </style>

    <style name="BaseButtonStyle" parent="AccentSmallTextStyle" >
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
</resources>